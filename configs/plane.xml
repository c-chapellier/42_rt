<?xml version="1.0" encoding="UTF-8"?>

<scene
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="scene.xsd"
>
  <height>600</height>
  <width>600</width>
  <precision>4</precision>
    
  <camera aperture="90">
    <position x="5" y="0" z="0" />
    <direction x="-1" y="0" z="0" />
    <up x="0" y="0" z="1" />
  </camera>

  <colors>
    <color name="red" r="200" g="30" b="30" />
    <color name="lightred" r="170" g="30" b="30" />
  </colors>

  <objects>
    <plane>
      <translation x="0" y="0" z="0" />
      <rotation x="0" y="0" z="0" />
      <scale x="1" y="1" z="1" />
      <diffuse />
      <chessboard color1="red" color2="lightred" />
    </plane>
  </objects>

</scene>