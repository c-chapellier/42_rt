<?xml version="1.0" encoding="UTF-8"?>

<scene
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="scene.xsd"
>
  <height>600</height>
  <width>600</width>
  <precision>4</precision>
    
  <camera aperture="90">
    <position x="12" y="0" z="10" />
    <direction x="-1" y="0" z="-0.5" />
    <up x="0" y="0" z="1" />
  </camera>

  <colors>
  </colors>

  <objects>
    <plane>
      <translation x="0" y="0" z="0" />
      <rotation x="0" y="85" z="0" />
      <scale x="1" y="1" z="1" />
      <diffuse />
      <chessboard color1="air_force_blue_raf" color2="air_force_blue_usaf" />
    </plane>
    <sphere>
      <translation x="0" y="0" z="1" />
      <rotation x="0" y="0" z="0" />
      <scale x="1" y="1" z="1" />
      <diffuse />
      <texturefromfile filename="./textures/bricks2.jpg" />
    </sphere>
    <sphere>
      <translation x="-3" y="1" z="1" />
      <rotation x="0" y="0" z="0" />
      <scale x="1" y="1" z="1" />
      <diffuse />
      <uniform color="red" />
    </sphere>
    <sphere>
      <translation x="-20" y="4" z="2" />
      <rotation x="0" y="0" z="0" />
      <scale x="2" y="2" z="2" />
      <diffuse />
      <uniform color="apple_green" />
    </sphere>
    <sphere>
      <translation x="-3" y="-5" z="2" />
      <rotation x="0" y="0" z="0" />
      <scale x="2" y="2" z="2" />
      <mirror />
      <texturefromfile filename="./textures/bricks2.jpg" />
    </sphere>
    <sphere>
      <translation x="-6" y="4" z="3" />
      <rotation x="0" y="0" z="0" />
      <scale x="3" y="3" z="3" />
      <refractive n="1.8" />
      <texturefromfile filename="./textures/bricks2.jpg" />
    </sphere>
  </objects>

</scene>